<resources>
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/action_dark</item>
        <item name="colorPrimaryDark">@color/status_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowBackground">@color/background_dark</item>
        <item name="popupTheme">@style/MenuTheme</item>
        <item name="cardStyle">@style/CardTheme</item>
    </style>

    <style name="MenuTheme" parent="Theme.AppCompat">
        <item name="android:colorBackground">@color/background_dark</item>
    </style>
    
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="background">@color/background_dark</item>
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="CardTheme" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/card_dark</item>
    </style>
</resources>
